{
  "name": "fi1a/simplequery",
  "type": "library",
  "description": "Серверная, цепочная, управляемая селекторами CSS3 объектная модель документа (DOM) API похожая на библиотеку jQuery",
  "keywords": [],
  "homepage": "https://github.com/fi1a/simplequery",
  "license": "MIT",
  "authors": [
    {
      "name": "Fi1a",
      "email": "fi1a@icloud.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8",
    "ext-xml": "*",
    "ext-tidy": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "fi1a/tokenizer": ">=1.0.0 <1.1.0",
    "fi1a/collection": ">=1.2.0 <1.3.0",
    "fi1a/format": ">=1.1.0 <1.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5",
    "captainhook/captainhook": "^5.4"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Fi1a\\SimpleQuery\\": "src"
    },
    "files": [
      "src/configure.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Fi1a\\Unit\\SimpleQuery\\": "tests"
    }
  },
  "scripts": {
    "fl:lint": "phpcs --cache=build/cache/phpcs.cache",
    "fl:phpcbf": "phpcbf --cache=build/cache/phpcbf.cache",
    "fl:test:unit:coverage:ci": "phpunit --coverage-clover build/logs/clover.xml",
    "fl:test:unit": "phpunit",
    "fl:check": [
      "@fl:lint",
      "@fl:test:unit"
    ],
    "pre-commit": [
      "@fl:lint"
    ],
    "pre-push": [
      "@fl:test:unit"
    ]
  },
  "scripts-descriptions": {
    "fl:lint": "Проверяет весь исходный код на соответсвие стандартам.",
    "fl:phpcbf": "Поправляет весь исходный код на соответсвие стандартам.",
    "fl:test:unit:coverage:ci": "Запускает все модульные тесты и генериреут отчет покрытия Clover.",
    "fl:check": "Полная проверка кода",
    "fl:test:unit": "Модульное тестирование"
  }
}
